#!/usr/bin/env python3

import signal
import argparse
from src.core import run, destroy

signal.signal(signal.SIGINT, destroy)

program = argparse.ArgumentParser()
program.add_argument('slug')
program.add_argument('--background-interval', default=60, type=int)
program.add_argument('--background-run', action='store_true')
program.add_argument('--dry-run', action='store_true')
program.add_argument('--version', action='version', version='Chroma Feedback 2.0.0')

run(program.parse_args())
